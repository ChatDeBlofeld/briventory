# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                         controllers.GlobalController.index(request: Request)

GET     /maintenance              controllers.GlobalController.maintenance(request: Request)
GET     /status                   controllers.GlobalController.status(request: Request)

GET     /auth/signin              controllers.auth.Auth.signIn
POST    /auth/signin              controllers.auth.Auth.doSignIn(request: Request)
GET     /auth/admin/signup        controllers.auth.Auth.adminSignUp(request: Request)
POST    /auth/admin/signup        controllers.auth.Auth.doAdminSignUp(request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

# WebJars Asstes
->      /webjars                  webjars.Routes
